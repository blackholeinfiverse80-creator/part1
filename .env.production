# Production Environment Configuration for Render
# SQLite Database Configuration
DB_PATH=data/context.db
NONCE_DB_PATH=data/nonce_store.db

# Security Settings (Disabled for initial deployment)
SSPL_ENABLED=false
SSPL_ALLOW_DRIFT_SECONDS=300

# External Integrations (Disabled for standalone deployment)
INTEGRATOR_USE_NOOPUR=false
USE_MONGODB=false

# Logging
LOG_LEVEL=INFO

# Service URLs (Local fallbacks)
VIDEO_SERVICE_URL=http://localhost:5002
NOOPUR_BASE_URL=http://localhost:5001

# Performance
REQUEST_TIMEOUT=30
MAX_RETRIES=3